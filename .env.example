# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# Crypto API Keys (Required for real-time price data)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
RBI_API_KEY=your_rbi_api_key_here

# Application Settings
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Settings
API_DEFAULT_TIMEOUT=10
API_DEFAULT_RETRIES=3

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=300
MAX_MEMORY_CACHE_SIZE=1000
CACHE_DIR=data/cache
CACHE_FILE_PREFIX=cache_
CACHE_FILE_SUFFIX=.json

# Cache Expiry Times (in seconds)
CACHE_STOCK_PRICE_EXPIRY=300
CACHE_CRYPTO_PRICE_EXPIRY=120
CACHE_FOREX_RATE_EXPIRY=3600
CACHE_MARKET_INDEX_EXPIRY=600
CACHE_HISTORICAL_DATA_EXPIRY=86400

# API Rate Limits (requests per minute)
COINGECKO_RATE_LIMIT=50
ALPHA_VANTAGE_RATE_LIMIT=5
COINMARKETCAP_RATE_LIMIT=30

# Default Parameters
DEFAULT_STOCK_MARKET=NSE
DEFAULT_CURRENCY=INR
DEFAULT_CRYPTO_CURRENCY=BTC

# Database Settings (if needed in the future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=finance_chatbot
# DB_USER=postgres
# DB_PASSWORD=password

# Neo4j Settings (if using Neo4j for knowledge graph)
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=password

# API Base URLs
